{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run Kaledis",
            "type": "shell",
            "command": "${workspaceFolder}\\kaledis build && start ${workspaceFolder}\\.build\\final.love",
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Compile Kaledis",
            "type": "shell",
            "command": "${workspaceFolder}\\kaledis build && ${workspaceFolder}\\kaledis compile",
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        }
    ]
}
